<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main fall_background color of the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/customBackground"/> <!-- Set your button's fall_background color -->
        </shape>
    </item>

    <!-- Top, Left, and Right borders (normal thickness) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/customBackground"/> <!-- Transparent fill -->
            <stroke
                android:width="1dp"
                android:color="?attr/customSecondary"/> <!-- Set border color and thickness -->
        </shape>
    </item>

    <!-- Bottom border (thicker) -->
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/customBackground"/> <!-- Transparent fill -->
            <stroke
                android:width="3dp"
                android:color="?attr/customSecondary"/> <!-- Set thicker bottom border -->
        </shape>
    </item>
</layer-list>

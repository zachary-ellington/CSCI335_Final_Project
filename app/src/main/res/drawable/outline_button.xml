<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/primary" /> <!-- Border color -->
            <corners android:radius="50dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Slightly different color for pressed state -->
            <stroke android:width="2dp" android:color="@color/black" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>

